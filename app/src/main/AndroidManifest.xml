<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.tutor">

    <application
        android:allowBackup="true"
        android:icon="@drawable/iak"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:noHistory="true" />
        <activity
            android:name=".entity.tutor.MainTutor"
            android:windowSoftInputMode="stateHidden"
            android:noHistory="true" />
        <activity
            android:name=".entity.quiz.MainQuiz"
            android:noHistory="true" />
        <activity
            android:name=".SplashScreen"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".entity.tutor.Content" android:noHistory="true"/>
        <activity
            android:name=".entity.quiz.ContentQuiz"
            android:noHistory="true">

        </activity>
        <activity android:name=".ProfileUser" android:noHistory="true" />
        <activity android:name=".entity.quiz.InputUser" android:noHistory="true" ></activity>
    </application>

</manifest>