<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.tutor.entity.quiz.ContentQuiz">

    <LinearLayout
        android:id="@+id/layoutUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:id="@+id/lblUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Selamat mengerjakan : "
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@color/colorPrimary"
            android:text="user"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutUser"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="test"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rbtgAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtQuestion"
            android:layout_marginTop="20dp">

            <RadioButton
                android:id="@+id/rbtA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batang"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbtB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daun"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbtC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akar"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbtD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buah"
                android:textStyle="bold" />

        </RadioGroup>

    </LinearLayout>
    
    <Button
        android:id="@+id/btnSubmitContentQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="Pertanyaan Selanjutnya"
        android:textColor="@color/colorWhite" />
</RelativeLayout>
